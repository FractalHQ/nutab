{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"moduleResolution": "bundler",
		"target": "esnext",
		"module": "esnext",
		"lib": ["esnext"],
		"types": ["node", "bun-types", "tippy.js"],
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"]
		},

		// "sourceMap": true,

		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,

		"strict": true,
		"skipLibCheck": true,
		// "strictNullChecks": false,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/**/**/*.ts", "src/**/*.svelte", "src/**/*.d.ts", "src/**/*.js", "src/**/*.ts", "src/*.d.ts"],
	"exclude": [
		// "src/lib/ui/Bookmarks/Tags.svelte", // This component isn't typed
		".vercel_build_output/*",
		"mdsvex.config.js",
		"node_modules/*",
		".svelte-kit/*",
		"functions/*",
		"coverage/*",
		".svelte/*",
		"build/*",
		"dist/*"
	]
}
